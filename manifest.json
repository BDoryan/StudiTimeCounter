{
    "manifest_version": 3,
    "name": "Studi Time Tracker",
    "version": "1.0",
    "description": "Compte le temps pass√© sur app.studi.fr quotidiennement et chaque semaine.",
    "permissions": ["tabs", "storage", "activeTab", "scripting"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://app.studi.fr/*"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    }
  }
  